{
  "dashboard": {
    "id": null,
    "title": "GreenOps Advisor - Cost & Energy Optimization",
    "tags": ["greenops", "kubernetes", "cost", "energy"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Cluster CPU Usage",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total[1m]))",
            "legendFormat": "CPU Usage"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Cluster Memory Usage",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes) / 1024 / 1024 / 1024",
            "legendFormat": "Memory Usage (GB)"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 3,
        "type": "graph",
        "title": "Energy Consumption (Joules)",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kepler_container_core_joules_total",
            "legendFormat": "{{container_name}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 4,
        "type": "table",
        "title": "Cost Allocation by Namespace",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "opencost_total_cost",
            "legendFormat": "{{namespace}}"
          }
        ],
        "datasource": "Prometheus",
        "transformations": [
          {
            "id": "reduce",
            "options": {
              "reducers": ["mean", "max", "min"]
            }
          }
        ]
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Pods per Namespace",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "count(kube_pod_info) by (namespace)",
            "legendFormat": "{{namespace}}"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Total Estimated Cost",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "sum(opencost_total_cost)",
            "legendFormat": "Total Cost"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Total Energy Consumption",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "sum(kepler_container_core_joules_total)",
            "legendFormat": "Total Joules"
          }
        ],
        "datasource": "Prometheus"
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}